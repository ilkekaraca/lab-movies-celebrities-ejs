<h2>New Movie</h2>
<form action="/movies/create" method="POST">
  Title <input type="text" name="title" /> Genre
  <input type="text" name="genre" /> Plot
  <input type="text" name="plot" />
  <select name="cast" multiple>
    <% allCeleb.forEach(celeb => { %>
    <option value="<%- celeb._id %>"><%- celeb.name %></option>
    <% }); %>
  </select>
  <button type="submit">Create</button>
</form>
